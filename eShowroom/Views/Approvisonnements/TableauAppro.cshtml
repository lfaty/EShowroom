@{
    ViewData["Title"] = "Tableau Approvisionnement";
    Layout = "~/views/shared/_LayoutForAdmin.cshtml";
}

@model IEnumerable<eShowroom.Models.BonEntree>

<div class="container">
    <hr class="my-5">

    <h5 class="my-4 dark-grey-text font-weight-bold">APPROVISIONNEMENT</h5>

    <!-- Section: Head options -->
    <section>

        <div class="card">
            <div class="card-body">

                <!-- Table -->
                <table class="table">

                    <!-- Table head -->
                    <thead class="blue-grey lighten-4">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroBon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateBon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EnteredDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fournisseur)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroBon)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateBon)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnteredDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fournisseur.Id)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                        
                    <!-- Table body -->
                </table>
                <!-- Table -->

            </div>
        </div>

        <div class="my-5"></div>

        <div class="card">
            <div class="card-body">

                <!-- Table -->
                <table class="table">

                    <!-- Table head -->
                    <thead class="mdb-color darken-3">
                        <tr class="text-white">
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                        </tr>
                    </thead>
                    <!-- Table head -->
                    <!-- Table body -->
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Larry</td>
                            <td>the Bird</td>
                            <td>twitter</td>
                        </tr>
                    </tbody>
                    <!-- Table body -->
                </table>
                <!-- Table -->

            </div>
        </div>

    </section>
    <!-- Section: Head options -->
</div>