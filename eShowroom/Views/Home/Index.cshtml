@model IEnumerable<eShowroom.Models.Product>

@{
    ViewData["Title"] = "Catalogue";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-danger bg-gradient"> 
                            @Html.DisplayFor(modelItem => item.ProductName) 
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="Images/Products/@Html.DisplayFor(modelItem => item.ProductImage)" width="100%" alt="@item.ProductName" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ProductShortDesc)</p>
                            <p class="card-text"><b>Catégorie: </b>@Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-outline-success" asp-controller="#" asp-action="#" asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Ajouter dans le panier
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
