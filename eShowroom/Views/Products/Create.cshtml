@model eShowroom.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/views/shared/_LayoutForAdmin.cshtml";
}

<!-- Main layout -->
<div class="container">
    <!-- Section: Intro -->
    <section class="mb-5">
        <h1>Create</h1>

        <h4>Product</h4>
        <hr />
        <div class="container-fluid">
            <!-- Section: Inputs -->
            <section class="section card mb-5">
                <div class="card-body">
                    <!-- Section heading -->
                    <h1 class="text-center my-5 h1">Formulaire d'ajout de produit</h1>
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-md-6 mb-4">
                                    <div class="md-form">
                                        <label asp-for="ProductName" class="control-label"></label>
                                        <input asp-for="ProductName" class="form-control" />
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="md-form">
                                        <label asp-for="ProductShortDesc" class="control-label"></label>
                                        <textarea asp-for="ProductShortDesc" class="form-control md-textarea"></textarea>
                                        <span asp-validation-for="ProductShortDesc" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="md-form">
                                        <label asp-for="ProductLongDesc" class="control-label"></label>
                                        <textarea asp-for="ProductLongDesc" class="form-control md-textarea"></textarea>
                                        <span asp-validation-for="ProductLongDesc" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="md-form">
                                        <label asp-for="ProductStock" class="control-label"></label>
                                        <input asp-for="ProductStock" class="form-control" />
                                        <span asp-validation-for="ProductStock" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="md-form">
                                        <div class="file-field">
                                            <div class="btn btn-primary btn-sm float-left">
                                                <label asp-for="ProductImage" class="control-label"></label>
                                                <input asp-for="ProductImage" class="form-control" type="file" />
                                                <span asp-validation-for="ProductImage" class="text-danger"></span>
                                            </div>
                                            <div class="file-path-wrapper">
                                                <input class="file-path validate" type="text" placeholder="Upload your file">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                </div>
            </section>
        </div>


    </section>
 </div>


